<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/womanimage"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/openingpagefragmentcontent">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp">


            <android.support.v7.widget.Toolbar

                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"

                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:id="@+id/signuptoolbar"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:layout_weight="1"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"

                android:background="#00ffffff"

                android:layout_gravity="bottom"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sign Up"
                    android:textSize="21dp"
                    android:id="@+id/signup"

                    android:textAllCaps="false"
                    android:background="@drawable/openingpagebuttondesign"
                    android:textColor="#a0ffffff"
                    android:gravity="center"/>
            </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.Toolbar

                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"

                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                android:layout_weight="1"
                android:background="#00ffffff"

                android:layout_gravity="bottom"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Log In"
                    android:textSize="21dp"
                    android:id="@+id/login"
                    android:textAllCaps="false"
                    android:background="@drawable/openingpagebuttondesignwhite"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="#a0ffffff"
            android:id="@+id/alreadyhaveanaccount"
            android:text="Already have account? Log in"
            android:layout_gravity="bottom"
            android:gravity="center"/>
    </FrameLayout>

</LinearLayout>