<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Start New Deal"
                android:textSize="22dp"
                android:id="@+id/startdealtitle"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:layout_width="290dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:src="@drawable/darkline"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:gravity="top|left"
                android:maxLength="100"
                android:paddingBottom="5dp"
                android:id="@+id/startdealtext"
                android:background="@drawable/setupshoprectangle"
                android:textColorHint="#50000000"
                android:hint="Deal Description.."
                android:paddingLeft="10dp"
                android:textColor="#000000"
                />
            <Button
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:text="Start Deal"
                android:textSize="20dp"
                android:id="@+id/startdealbutton"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/buttondesign"
                android:textColor="@color/White"
                android:gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>