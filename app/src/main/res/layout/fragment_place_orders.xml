<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    tools:context=".Fragments.PlaceOrders">

  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/ordermessagerecyclerview"
      android:visibility="gone"></android.support.v7.widget.RecyclerView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:orientation="vertical"
      android:id="@+id/nonetworklayout">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/no_connection" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#90000000"
        android:text="No Network Connection"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/nonetworktext"
        android:textSize="23dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Try Again"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:id="@+id/nonetworkbutton"
        android:background="@drawable/loginbuttondesign"
        android:textColor="@color/White"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      android:id="@+id/errorlayout">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/erroricon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#90000000"
        android:text="Error Occured please try again"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/errortext"
        android:textSize="23dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Try Again"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:id="@+id/errorbutton"
        android:background="@drawable/loginbuttondesign"
        android:textColor="@color/White"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:id="@+id/progressbarlayout">
    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      android:id="@+id/orderlayout">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/emptyorder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#90000000"
        android:text="You currently have no order"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/ordertext"
        android:textSize="23dp"/>

  </LinearLayout>
</LinearLayout>