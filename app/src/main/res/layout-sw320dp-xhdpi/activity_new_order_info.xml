<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"

    tools:context=".Activities.newOrderuserInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/orderinfotoolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Information"
                android:textSize="20dp"
                android:id="@+id/orderinfotoolbartitle"
                android:textColor="@color/White"
                android:layout_marginLeft="20dp"/>
        </android.support.v7.widget.Toolbar>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="View Order"
            android:textAllCaps="false"
            android:background="@drawable/buttondesign"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:id="@+id/orderinfovieworder"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/orderinfoscrollview"

            android:layout_marginTop="55dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Location"
                    android:textSize="20dp"
                    android:id="@+id/orderinfolocation"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:layout_marginLeft="20dp"/>
                <com.google.android.gms.maps.MapView
                    android:id="@+id/orderinfomap"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Address"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:id="@+id/orderinfoaddresstitle"
                    android:layout_marginLeft="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text=""
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:id="@+id/orderinfoaddressvalue"
                            android:layout_marginRight="10dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Institution"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/orderinfocitytitle"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text=""
                            android:textSize="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/orderinfocityvalue"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Area"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/orderinfoareatitle"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text=""
                            android:textSize="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:id="@+id/orderinfoareavalue"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Phone"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:id="@+id/orderinfophonetitle"
                    android:layout_marginLeft="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="50dp"
                            android:text=""
                            android:textSize="20dp"
                            android:id="@+id/orderinfophonevalue"
                            android:layout_marginRight="5dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:layout_alignParentLeft="true"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:layout_marginLeft="10dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/orderinfomakecallicon"
                            android:layout_gravity="center"
                            android:src="@drawable/phoneicon"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Payment Method"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:id="@+id/orderinfopaymentmethodtitle"
                    android:textColor="#90000000"
                    android:layout_marginLeft="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text=""
                            android:textSize="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:id="@+id/orderinfopaymentmethodvalue"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Status"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textColor="#90000000"
                    android:id="@+id/orderinfostatustitle"
                    android:layout_marginLeft="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginBottom="100dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="50dp"
                            android:text=""
                            android:textSize="20dp"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/orderinfostatusvalue"
                            android:layout_marginLeft="10dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/updatestatusicon"
                            android:src="@drawable/updateicon"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderinfoprogressbarlayout"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/nonetworklayout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_connection" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#90000000"
                android:text="No Network Connection"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/nonetworktext"
                android:textSize="23dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Try Again"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:id="@+id/nonetworkbutton"
                android:background="@drawable/loginbuttondesign"
                android:textColor="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/errorlayout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/erroricon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#90000000"
                android:text="Error Occured please try again"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/errortext"
                android:textSize="23dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Try Again"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:id="@+id/errorbutton"
                android:background="@drawable/loginbuttondesign"
                android:textColor="@color/White"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>